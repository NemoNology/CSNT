<Window x:Class="WPF_project.Data.Views.Launcher"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_project.Data.Views"
        mc:Ignorable="d"
        Title="Мими чат лаунчер"
        Height="160"
        Width="320"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Light}">

    <Window.DataContext>
        <local:Launcher />
    </Window.DataContext>

    <Grid>
        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Button Content="Запустить клиент"
                        Click="OnLaunchClientClicked" />
                <Button Content="Запустить сервер"
                        Click="OnLaunchServerClicked" />
            </StackPanel>
            <CheckBox Content="Выключить лаунчер после запуска программы"
                      HorizontalAlignment="Center"
                      IsChecked="{Binding IsLauncherClosingAfterProgramLaunching}"/>
        </StackPanel>
    </Grid>
</Window>
